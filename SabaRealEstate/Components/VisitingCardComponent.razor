@using MudBlazor

<MudPaper Class="full-card">
    <MudGrid Class="h-full" AlignItems="Center" Justify="Justify.FlexStart">
        <MudItem xs="12" md="4" lg="3">
            <MudImage Src="https://i.imgur.com/fXVC7yo.jpeg" Width="328" Height="300" Alt="Swedish Farm House" Style="width: 100%; height: auto; object-fit: cover; border-radius: 8px;" />
        </MudItem>
        <MudItem xs="12" md="8" lg="6">
            <MudStack Spacing="1">
                <MudText Typo="Typo.h3" Color="Color.Primary">SABA KATHIRAMALAI</MudText>
                <MudText Typo="Typo.subtitle1">Direct : 📞 (123) 456-7890</MudText>
                <MudText Typo="Typo.subtitle1">Mobile : 📞 (123) 456-7890</MudText>
                <MudText Typo="Typo.subtitle1" Color="Color.Tertiary"> Email: john.doe@example.com</MudText>
                <MudText Typo="Typo.subtitle2">🏢 ABC Realty - Licensed Broker</MudText>
                <br />
                <MudText Typo="Typo.caption" Align="Align.Left">
                    For more information on condo assignments, property management services for owners/investors looking to lease, availability, pricing, floor plans and video tours.
                    <br />please call or e-mail me.
                </MudText>
                <br />
                <br />
                <MudItem xs="12" Class="mt-2">
                    <MudStack Row="true" Justify="Justify.FlexStart" Spacing="2">
                        <MudIconButton Icon="@Icons.Material.Filled.Email" Color="Color.Primary" Size="Size.Medium" aria-label="Email" />
                        <MudIconButton Icon="@Icons.Custom.Brands.LinkedIn" Color="Color.Primary" Size="Size.Medium" aria-label="LinkedIn" />
                        <MudIconButton Icon="@Icons.Custom.Brands.YouTube" Color="Color.Primary" Size="Size.Medium" aria-label="YouTube" />
                        <MudIconButton Icon="@Icons.Custom.Brands.Instagram" Color="Color.Primary" Size="Size.Medium" aria-label="Instagram" />
                    </MudStack>
                </MudItem>
            </MudStack>
        </MudItem> 
    </MudGrid>
</MudPaper>

<style>
    .full-card {
        width: 100vw;
        height: 100vh;
        padding: 24px;
        box-sizing: border-box;
    }

    .agent-photo {
        width: 100%;
        max-width: 250px;
        height: auto;
        border-radius: 8px;
        display: block;
        margin: 0 auto;
    }

    .h-full {
        height: 100%;
    }
</style>
